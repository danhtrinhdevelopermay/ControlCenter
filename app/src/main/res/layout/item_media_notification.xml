<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mediaNotificationContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <FrameLayout
        android:id="@+id/mediaCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/media_notification_background"
        android:clipToOutline="true">

        <ImageView
            android:id="@+id/albumArtBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.3" />

        <View
            android:id="@+id/albumArtOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/media_background_gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <ImageView
                        android:id="@+id/albumArt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/media_album_art_background"
                        android:clipToOutline="true" />

                    <ImageView
                        android:id="@+id/albumArtPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_music_note"
                        android:scaleType="center"
                        android:background="@drawable/media_album_art_placeholder"
                        android:clipToOutline="true"
                        android:visibility="gone" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/mediaAppName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#B0FFFFFF"
                        android:textSize="12sp"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/mediaTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/mediaArtist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#D0FFFFFF"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/mediaPrevious"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_skip_previous"
                    android:padding="10dp"
                    android:background="@drawable/media_control_button_background"
                    android:contentDescription="Previous" />

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:id="@+id/mediaPlayPause"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_pause"
                        android:padding="14dp"
                        android:background="@drawable/media_play_button_background"
                        android:contentDescription="Play/Pause" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/mediaNext"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_skip_next"
                    android:padding="10dp"
                    android:background="@drawable/media_control_button_background"
                    android:contentDescription="Next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/progressContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/mediaProgress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:progressDrawable="@drawable/media_progress_drawable"
                    android:max="100"
                    android:progress="0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/mediaCurrentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#80FFFFFF"
                        android:textSize="11sp"
                        android:text="0:00" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/mediaDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#80FFFFFF"
                        android:textSize="11sp"
                        android:text="0:00" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>
