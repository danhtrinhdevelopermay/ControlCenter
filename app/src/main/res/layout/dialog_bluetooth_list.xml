<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_background"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="24dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bluetooth"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Switch
            android:id="@+id/bluetoothSwitch"
            android:layout_width="51dp"
            android:layout_height="31dp"
            android:thumb="@drawable/toggle_thumb"
            android:track="@drawable/toggle_selector"
            android:checked="true" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loadingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:indeterminateTint="#007AFF"
        android:visibility="visible" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Không tìm thấy thiết bị Bluetooth nào"
        android:textColor="#8E8E93"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pairedDevicesLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thiết bị Bluetooth đã lưu"
        android:textColor="#8E8E93"
        android:textSize="13sp"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bluetoothRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="350dp"
        android:visibility="gone"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_button_background"
        android:gravity="center"
        android:text="Thêm cài đặt"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
