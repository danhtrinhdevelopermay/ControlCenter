<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FF2C2C2C"
    android:padding="20dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết nối Wi-Fi"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/ssidText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FF3D3D3D"
        android:hint="Nhập mật khẩu"
        android:textColorHint="#666666"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/showPasswordCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiện mật khẩu"
        android:textColor="#AAAAAA"
        android:textSize="13sp"
        android:buttonTint="#3B82F6"
        android:layout_marginBottom="16dp" />

    <ProgressBar
        android:id="@+id/connectingProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="#3B82F6"
        android:visibility="gone" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF5722"
        android:textSize="13sp"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="#FF3D3D3D"
            android:gravity="center"
            android:text="Hủy"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/connectButton"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="#FF3B82F6"
            android:gravity="center"
            android:text="Kết nối"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
