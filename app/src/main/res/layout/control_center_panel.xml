<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controlCenterContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="50dp"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1: Connectivity + Now Playing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <!-- Connectivity Widget (2x2 grid) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/ios_connectivity_widget"
                android:padding="14dp"
                android:layout_marginEnd="6dp">

                <!-- Row 1: Airplane + Cellular -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="10dp">

                    <FrameLayout
                        android:id="@+id/airplaneButton"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/control_item_background">

                        <ImageView
                            android:id="@+id/airplaneIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_airplane"
                            android:tint="#FFFFFF" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/cellularButton"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/control_item_background">

                        <ImageView
                            android:id="@+id/cellularIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cellular"
                            android:tint="#FFFFFF" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Row 2: WiFi + Bluetooth -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/wifiButton"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/control_item_background_active">

                        <ImageView
                            android:id="@+id/wifiIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_wifi"
                            android:tint="#FFFFFF" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bluetoothButton"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/control_item_background">

                        <ImageView
                            android:id="@+id/bluetoothIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bluetooth"
                            android:tint="#007AFF" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Now Playing Widget -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/ios_now_playing_widget"
                android:padding="14dp"
                android:layout_marginStart="6dp">

                <!-- Header with title and AirPlay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="top">

                    <TextView
                        android:id="@+id/musicTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Not Playing"
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/airplayButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_screen_mirror"
                        android:tint="#999999" />
                </LinearLayout>

                <!-- Media controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/prevButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_skip_previous"
                        android:tint="#808080" />

                    <ImageView
                        android:id="@+id/playButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_play"
                        android:tint="#808080"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp" />

                    <ImageView
                        android:id="@+id/nextButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_skip_next"
                        android:tint="#808080" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Small buttons column + Focus + Brightness + Volume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <!-- Left column: Orientation Lock + Screen Mirror (stacked) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">

                <!-- Orientation Lock (active with red arrow) -->
                <FrameLayout
                    android:id="@+id/rotationButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/ios_small_button_active">

                    <ImageView
                        android:id="@+id/rotationIcon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_orientation_lock"
                        android:tint="#FF3B30" />
                </FrameLayout>

                <!-- Screen Mirror -->
                <FrameLayout
                    android:id="@+id/screenMirrorButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/ios_small_button">

                    <ImageView
                        android:id="@+id/screenMirrorIcon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_screen_mirror"
                        android:tint="#FFFFFF" />
                </FrameLayout>
            </LinearLayout>

            <!-- Focus Widget -->
            <LinearLayout
                android:id="@+id/focusButton"
                android:layout_width="0dp"
                android:layout_height="122dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/ios_widget_background"
                android:padding="16dp"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ios_focus_circle">

                    <ImageView
                        android:id="@+id/focusIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_focus"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <!-- Brightness Slider -->
            <FrameLayout
                android:id="@+id/brightnessSlider"
                android:layout_width="56dp"
                android:layout_height="122dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ios_slider_background"
                android:clipChildren="true"
                android:clipToPadding="true">

                <View
                    android:id="@+id/brightnessFill"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ios_slider_fill" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/ic_brightness"
                    android:tint="#3C3C43" />
            </FrameLayout>

            <!-- Volume Slider -->
            <FrameLayout
                android:id="@+id/volumeSlider"
                android:layout_width="56dp"
                android:layout_height="122dp"
                android:background="@drawable/ios_slider_background">

                <View
                    android:id="@+id/volumeFill"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/ios_slider_fill" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/ic_volume_mute"
                    android:tint="#999999" />
            </FrameLayout>
        </LinearLayout>

        <!-- Row 3: Flashlight, Calculator, Screen Recording, Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <FrameLayout
                android:id="@+id/flashlightButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:id="@+id/flashlightIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_flashlight"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/calculatorButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:id="@+id/calculatorIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_calculator"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/recordingButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:id="@+id/recordingIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_screen_recording"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/displayButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/ios_widget_background_active">

                <ImageView
                    android:id="@+id/displayIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_display"
                    android:tint="#007AFF" />
            </FrameLayout>
        </LinearLayout>

        <!-- Row 4: Hearing, Timer, Battery, Accessibility -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/hearingButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:id="@+id/hearingIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_hearing"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/timerButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:id="@+id/timerIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/batteryButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:id="@+id/batteryIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_battery"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/accessibilityButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/ios_widget_background_active">

                <ImageView
                    android:id="@+id/accessibilityIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_accessibility"
                    android:tint="#007AFF" />
            </FrameLayout>
        </LinearLayout>

        <!-- Home Indicator -->
        <View
            android:layout_width="135dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:background="@drawable/ios_home_indicator" />

    </LinearLayout>

</FrameLayout>
