<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controlCenterContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="50dp"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/ios_connectivity_widget"
                android:padding="12dp"
                android:layout_marginEnd="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/airplaneButton"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/control_item_background">

                        <ImageView
                            android:id="@+id/airplaneIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_airplane"
                            android:tint="#FFFFFF" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/cellularButton"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/control_item_background">

                        <ImageView
                            android:id="@+id/cellularIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cellular"
                            android:tint="#FFFFFF" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <FrameLayout
                        android:id="@+id/wifiButton"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/control_item_background_active">

                        <ImageView
                            android:id="@+id/wifiIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_wifi"
                            android:tint="#007AFF" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/bluetoothButton"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_margin="4dp"
                        android:background="@drawable/control_item_background_active">

                        <ImageView
                            android:id="@+id/bluetoothIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bluetooth"
                            android:tint="#007AFF" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/ios_now_playing_widget"
                android:padding="12dp"
                android:layout_marginStart="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_volume"
                        android:tint="#999999" />

                    <TextView
                        android:id="@+id/musicTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Playing"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/prevButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_skip_previous"
                        android:tint="#FFFFFF" />

                    <ImageView
                        android:id="@+id/playButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_play"
                        android:tint="#FFFFFF"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <ImageView
                        android:id="@+id/nextButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_skip_next"
                        android:tint="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <FrameLayout
                android:id="@+id/rotationButton"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:id="@+id/rotationIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_orientation_lock"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/dndButton"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:id="@+id/dndIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_do_not_disturb"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/focusButton"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:id="@+id/focusIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_focus"
                    android:tint="#FFFFFF" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/ios_widget_background"
                android:padding="12dp"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical">

                <FrameLayout
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@drawable/control_item_background">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_focus"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Focus"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:background="@drawable/ios_widget_background">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_brightness"
                    android:tint="#FFFFFF" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">

            <FrameLayout
                android:id="@+id/flashlightButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="6dp"
                android:background="@drawable/ios_circle_button">

                <ImageView
                    android:id="@+id/flashlightIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_flashlight"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/screenMirrorButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="6dp"
                android:background="@drawable/ios_circle_button">

                <ImageView
                    android:id="@+id/screenMirrorIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_screen_mirror"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cameraButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="6dp"
                android:background="@drawable/ios_circle_button">

                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera"
                    android:tint="#FFFFFF" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/timerButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="6dp"
                android:background="@drawable/ios_circle_button">

                <ImageView
                    android:id="@+id/timerIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer"
                    android:tint="#FFFFFF" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/ios_widget_background" />

    </LinearLayout>

</FrameLayout>
