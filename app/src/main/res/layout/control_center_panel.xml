<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controlCenterContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingTop="100dp"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: Date/Time and User Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/dateTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Th 7, 29 Thg 11"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:alpha="0.9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saymee"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.9" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_cellular"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="4dp"
                    android:alpha="0.7" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_battery"
                    android:tint="#FFFFFF"
                    android:alpha="0.7" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 1: WiFi and Data Toggle Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/wifiButton"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@drawable/miui_toggle_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/wifiIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_wifi"
                    android:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/wifiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wi-Fi"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/wifiStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tắt"
                        android:textColor="#CCCCCC"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cellularButton"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/miui_toggle_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/cellularIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_cellular"
                    android:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/cellularText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dữ liệu di động"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/cellularStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tắt"
                        android:textColor="#CCCCCC"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Media Control + Brightness & Volume Sliders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:weightSum="2">

            <!-- Media Control Widget - Takes exactly half width like WiFi button -->
            <FrameLayout
                android:id="@+id/mediaPlayerWidget"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:background="@drawable/miui_media_background"
                android:layout_marginEnd="6dp"
                android:clipToOutline="true"
                android:clipChildren="true"
                android:outlineProvider="background">

                <!-- Album Art Background (shown when playing) -->
                <ImageView
                    android:id="@+id/albumArtBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:alpha="0.4" />
                    
                <!-- Dark overlay on album art -->
                <View
                    android:id="@+id/albumArtOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/media_background_overlay"
                    android:visibility="gone" />

                <!-- Content Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- AirPlay button - Top Right -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/airplayButton"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_screen_mirror"
                            android:tint="#9E9E9E" />
                    </FrameLayout>

                    <!-- Center content area -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <!-- No media state - centered text -->
                        <TextView
                            android:id="@+id/musicTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Không phát"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <!-- Playing state - album art + info (hidden by default) -->
                        <LinearLayout
                            android:id="@+id/mediaInfoContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/albumArtView"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_album_art"
                                android:clipToOutline="true" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:id="@+id/musicTitlePlaying"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:ellipsize="end" />

                                <TextView
                                    android:id="@+id/musicArtist"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="#BBBBBB"
                                    android:textSize="12sp"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>

                    <!-- Media controls - Bottom -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/prevButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_skip_previous"
                            android:tint="#808080" />

                        <ImageView
                            android:id="@+id/playButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_play"
                            android:tint="#FFFFFF"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="32dp" />

                        <ImageView
                            android:id="@+id/nextButton"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:padding="4dp"
                            android:src="@drawable/ic_skip_next"
                            android:tint="#808080" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Sliders Container - Takes the other half width -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:orientation="horizontal">

                <!-- Brightness Slider -->
                <FrameLayout
                    android:id="@+id/brightnessSlider"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/miui_slider_background"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:clipToOutline="true"
                    android:outlineProvider="background">

                    <View
                        android:id="@+id/brightnessFill"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/miui_slider_fill" />

                    <ImageView
                        android:id="@+id/brightnessIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/ic_brightness"
                        android:tint="#808080" />
                </FrameLayout>

                <!-- Volume Slider -->
                <FrameLayout
                    android:id="@+id/volumeSlider"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/miui_slider_background"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:clipToOutline="true"
                    android:outlineProvider="background">

                    <View
                        android:id="@+id/volumeFill"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/miui_slider_fill" />

                    <ImageView
                        android:id="@+id/volumeIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/ic_volume"
                        android:tint="#808080" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3-4: Circular Buttons (2 rows x 4 columns) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- First row of circular buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <FrameLayout
                    android:id="@+id/bluetoothButton"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/bluetoothBackground"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/bluetoothIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bluetooth"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/notificationButton"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/notificationBackground"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/notificationIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notification"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flashlightButton"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/flashlightBackground"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/flashlightIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_flashlight"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/rotationButton"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/rotationBackground"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/rotationIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_screen_rotation"
                        android:tint="#FFFFFF" />
                </FrameLayout>
            </LinearLayout>

            <!-- Second row of circular buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/cameraButton"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/cameraBackground"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/cameraIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_camera"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/screenMirrorButton"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/screenMirrorBackground"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/screenMirrorIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_screen_mirror"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/videoButton"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/videoBackground"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/videoIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_video"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/locationButton"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/locationBackground"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location"
                        android:tint="#FFFFFF" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- App Shortcuts Section -->
        <LinearLayout
            android:id="@+id/appShortcutsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phím tắt ứng dụng"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never">

                <LinearLayout
                    android:id="@+id/appShortcutsRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" />

            </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
