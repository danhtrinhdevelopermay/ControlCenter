<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controlCenterContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="40dp"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: Date/Time and User Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/dateTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Th 7, 29 Thg 11"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:alpha="0.9" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saymee"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginEnd="8dp"
                    android:alpha="0.9" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_cellular"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="4dp"
                    android:alpha="0.7" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_battery"
                    android:tint="#FFFFFF"
                    android:alpha="0.7" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 1: WiFi and Data Toggle Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/wifiButton"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@drawable/miui_toggle_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/wifiIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_wifi"
                    android:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/wifiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wi-Fi"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/wifiStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tắt"
                        android:textColor="#CCCCCC"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cellularButton"
                android:layout_width="0dp"
                android:layout_height="76dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/miui_toggle_background"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/cellularIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_cellular"
                    android:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/cellularText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dữ liệu di động"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/cellularStatusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tắt"
                        android:textColor="#CCCCCC"
                        android:textSize="13sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Media Control + Brightness & Volume Sliders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Media Control Widget -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/miui_media_background"
                android:padding="14dp"
                android:layout_marginEnd="8dp">

                <!-- Header with AirPlay -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/musicTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Không phát"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/musicArtist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#AAAAAA"
                            android:textSize="12sp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:visibility="gone" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/albumArtView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/airplayButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_screen_mirror"
                        android:tint="#AAAAAA" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Media controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/prevButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_skip_previous"
                        android:tint="#FFFFFF" />

                    <ImageView
                        android:id="@+id/playButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_play"
                        android:tint="#FFFFFF"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />

                    <ImageView
                        android:id="@+id/nextButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_skip_next"
                        android:tint="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Brightness Slider -->
            <FrameLayout
                android:id="@+id/brightnessSlider"
                android:layout_width="64dp"
                android:layout_height="160dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/miui_slider_background"
                android:clipChildren="true"
                android:clipToPadding="true">

                <View
                    android:id="@+id/brightnessFill"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/miui_slider_fill" />

                <ImageView
                    android:id="@+id/brightnessIcon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/ic_brightness"
                    android:tint="#808080" />
            </FrameLayout>

            <!-- Volume Slider -->
            <FrameLayout
                android:id="@+id/volumeSlider"
                android:layout_width="64dp"
                android:layout_height="160dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/miui_slider_background"
                android:clipChildren="true"
                android:clipToPadding="true">

                <View
                    android:id="@+id/volumeFill"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/miui_slider_fill" />

                <ImageView
                    android:id="@+id/volumeIcon"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="14dp"
                    android:src="@drawable/ic_volume"
                    android:tint="#808080" />
            </FrameLayout>
        </LinearLayout>

        <!-- Row 3-4: Circular Buttons (2 rows x 4 columns) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- First row of circular buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <FrameLayout
                    android:id="@+id/bluetoothButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp">

                    <View
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/bluetoothIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_bluetooth"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/notificationButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp">

                    <View
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/notificationIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_notification"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flashlightButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp">

                    <View
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/flashlightIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_flashlight"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/rotationButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/rotationIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_screen_rotation"
                        android:tint="#FFFFFF" />
                </FrameLayout>
            </LinearLayout>

            <!-- Second row of circular buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <FrameLayout
                    android:id="@+id/cameraButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp">

                    <View
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/cameraIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_camera"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/screenMirrorButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp">

                    <View
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/screenMirrorIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_screen_mirror"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/videoButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp">

                    <View
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/videoIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_video"
                        android:tint="#FFFFFF" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/locationButton"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/miui_circle_button" />

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location"
                        android:tint="#FFFFFF" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- App Shortcuts Section -->
        <LinearLayout
            android:id="@+id/appShortcutsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phím tắt ứng dụng"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:overScrollMode="never">

                <LinearLayout
                    android:id="@+id/appShortcutsRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" />

            </HorizontalScrollView>
        </LinearLayout>

        <!-- Grid Button -->
        <FrameLayout
            android:id="@+id/gridButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/miui_circle_button" />

            <ImageView
                android:id="@+id/gridIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_grid"
                android:tint="#FFFFFF" />
        </FrameLayout>

        <!-- Edit Button -->
        <TextView
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Sửa"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/miui_toggle_background" />

    </LinearLayout>

</FrameLayout>
